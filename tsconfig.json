{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./lib",
    "lib": ["es2015", "dom", "es2017"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "integration-test/**/*"
  ]
}
